<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MHBank.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MHBank.Mobile.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Login -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate views:LoginPage}" />
    <!-- Register -->
    <ShellContent
      Route="login"
      ContentTemplate="{DataTemplate views:RegisterPage}" />
    <!-- Home -->
    <ShellContent
        Route="home"
        ContentTemplate="{DataTemplate views:HomePage}" />
    <!-- Transfer -->
    <ShellContent
       Route="transfer"
       ContentTemplate="{DataTemplate views:TransferPage}" />
    <!-- Transactions History -->
    <ShellContent
       Route="transactionshistory"
       ContentTemplate="{DataTemplate views:TransactionsHistoryPage}" />
    <!-- Account Details -->
    <ShellContent
       Route="accountdetails"
       ContentTemplate="{DataTemplate views:AccountDetailsPage}" />
    <!-- Profile -->
    <ShellContent
    Route="profile"
    ContentTemplate="{DataTemplate views:ProfilePage}" />
</Shell>