<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MHBank.Mobile.Views.AccountDetailsPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
                <Label Text="←"
                       FontSize="24"
                       TextColor="Black">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackTapped" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="تفاصيل الحساب"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Account Card -->
            <Border BackgroundColor="#87CEEB"
                    StrokeThickness="0"
                    Padding="25"
                    Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Label x:Name="AccountTypeLabel"
                           Text=""
                           FontSize="18"
                           TextColor="Black"
                           Opacity="0.9" />

                    <Label x:Name="BalanceLabel"
                           Text=""
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Label x:Name="AccountNumberLabel"
                           Text=""
                           FontSize="14"
                           TextColor="Black"
                           Opacity="0.8" />

                    <Label x:Name="IBANLabel"
                           Text=""
                           FontSize="12"
                           TextColor="Black"
                           Opacity="0.7" />
                </VerticalStackLayout>
            </Border>

            <!-- Account Info -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="20"
                    StrokeShape="RoundRectangle 16">
                <VerticalStackLayout Spacing="15">
                    <Label Text="معلومات الحساب"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Grid ColumnDefinitions="*,Auto" RowSpacing="12">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="حالة الحساب:"
                               TextColor="Gray"
                               FontSize="14" />
                        <Label x:Name="StatusLabel"
                               Grid.Row="0" Grid.Column="1"
                               Text=""
                               TextColor="#4CAF50"
                               FontSize="14"
                               FontAttributes="Bold" />

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="تاريخ الفتح:"
                               TextColor="Gray"
                               FontSize="14" />
                        <Label x:Name="OpenedAtLabel"
                               Grid.Row="1" Grid.Column="1"
                               Text=""
                               TextColor="Black"
                               FontSize="14" />

                        <Label Grid.Row="2" Grid.Column="0"
                               Text="العملة:"
                               TextColor="Gray"
                               FontSize="14" />
                        <Label x:Name="CurrencyLabel"
                               Grid.Row="2" Grid.Column="1"
                               Text=""
                               TextColor="Black"
                               FontSize="14" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Transaction Limits -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="20"
                    StrokeShape="RoundRectangle 16">
                <VerticalStackLayout Spacing="15">
                    <Label Text="حدود التحويل"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Grid ColumnDefinitions="*,Auto" RowSpacing="12">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="الحد اليومي:"
                               TextColor="Gray"
                               FontSize="14" />
                        <Label x:Name="DailyLimitLabel"
                               Grid.Row="0" Grid.Column="1"
                               Text=""
                               TextColor="Black"
                               FontSize="14"
                               FontAttributes="Bold" />

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="الحد الشهري:"
                               TextColor="Gray"
                               FontSize="14" />
                        <Label x:Name="MonthlyLimitLabel"
                               Grid.Row="1" Grid.Column="1"
                               Text=""
                               TextColor="Black"
                               FontSize="14"
                               FontAttributes="Bold" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
